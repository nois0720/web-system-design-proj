<div class="container">

    <!-- Main hero unit for a primary marketing message or call to action -->
    <div id="levelDesignMain">

        <table class="table">
            <thead class="thead-inverse">
            <tr>
                <th class="td_first">No</th>
                <th>Level Name</th>
                <th class="td_third">Level Designer</th>
                <th style="display:none"></th>
            </tr>
            </thead>
            <tbody>
            <% for(var i = 0;i < levelList.length;i++){ %>
            <tr class='indexLevelList' onclick="getLevel(event);">
                <td class="td_first"><%=i+1%></td>
                <td><%=levelList[i].levelName%></td>
                <td class="td_third"><%=levelList[i].levelDesigner%></td>
                <td style="display:none"><%=levelList[i].createTime%></td>
            </tr>
            <% } %>
            </tbody>
        </table>
        <form method="post" id="_form">
