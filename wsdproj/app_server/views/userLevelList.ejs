    <title>Aigo</title>

    <!-- Le styles -->
    <link href="/bootstrap-2.3.2/docs/assets/css/bootstrap.css" rel="stylesheet">

    <style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
        .indexLevelList:hover{
            background-color: #c09853;
        }
    </style>


    <!-- Fav and touch icons -->

    <script>
        function getLevel(event){
            var form = document.getElementById('_form');
            var tr = event.target;
            var target = tr.parentNode.childNodes[7];
            var createTime = target.innerText;

            var el;
            el = document.createElement("input");
            el.type = "hidden";
            el.name = "createTime";
            el.value = createTime;
            form.appendChild(el);
            form.setAttribute('action','/modifyGame/userLevel');
            form.submit();
        }
    </script>
    <link href="/bootstrap-2.3.2/docs/assets/css/bootstrap-responsive.css" rel="stylesheet">
</head>

